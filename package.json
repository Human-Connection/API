{
  "name": "human-connection-api",
  "description": "Human-Connection API",
  "version": "0.1.0",
  "homepage": "https://human-connection.org",
  "license": "CC-BY-NC-SA-4.0",
  "repository": {
    "type" : "git",
    "url" : "https://github.com/Human-Connection/API.git"
  },
  "main": "server",
  "keywords": [
    "human-connection",
    "social network",
    "api",
    "feathersjs"
  ],
  "author": {
    "name": "Human Connection gGmbH",
    "email": "developer@human-connection.org"
  },
  "contributors": [],
  "bugs": {
    "url" : "https://github.com/Human-Connection/API/issues",
    "email" : "bugfix@human-connection.org"
  },
  "directories": {
    "lib": "server",
    "test": "test/"
  },
  "engines": {
    "node": ">= 8.0.0",
    "yarn": ">= 0.18.0"
  },
  "scripts": {
    "clear": "rm -Rf tmp",
    "test": "npm run eslint && npm run mocha",
    "eslint": "eslint server/. test/. --config .eslintrc.json",
    "start": "concurrently 'mongod' 'wait-on tcp:27017 && NODE_ENV=production node server/'",
    "start-win": "concurrently \"mongod\" \"wait-on tcp:27017 &&SET NODE_ENV=production&& node server/\"",
    "dev": "npm run clear && concurrently 'mongod --dbpath data' 'wait-on tcp:27017 && NODE_ENV=development nodemon --inspect server/'",
    "dev-win": "npm run clear && concurrently \"mongod --dbpath data\" \"wait-on tcp:27017&&SET NODE_ENV=development&& nodemon --inspect server/\"",
    "dev-noseed": "concurrently 'mongod --dbpath data' 'wait-on tcp:27017 && NODE_ENV=development nodemon --inspect server/'",
    "dev-win-noseed": "concurrently \"mongod --dbpath data\" \"wait-on tcp:27017 && nodemon --inspect server/\"",
    "mocha": "npm run clear && concurrently --kill-others -s first 'mongod --dbpath data &>/dev/null' 'wait-on tcp:27017 && NODE_ENV=test mocha test/ --recursive --timeout 10000 --exit'"
  },
  "dependencies": {
    "body-parser": "~1.18.2",
    "compression": "~1.7.1",
    "cors": "~2.8.4",
    "crypto": "~1.0.1",
    "crypto-js": "~3.1.9-1",
    "dauria": "~2.0.0",
    "email-templates": "2.6.0",
    "feathers": "~2.2.4",
    "feathers-authentication": "~1.3.1",
    "feathers-authentication-hooks": "~0.1.6",
    "feathers-authentication-jwt": "~0.3.2",
    "feathers-authentication-local": "~0.4.4",
    "feathers-authentication-management": "~1.0.3",
    "feathers-blob": "~1.3.1",
    "feathers-configuration": "~0.4.2",
    "feathers-errors": "~2.9.2",
    "feathers-hooks": "~2.1.2",
    "feathers-hooks-common": "~3.10.0",
    "feathers-logger": "~0.2.3",
    "feathers-mailer": "~2.0.0",
    "feathers-memory": "~1.3.1",
    "feathers-mongodb": "~3.0.0",
    "feathers-mongodb-fuzzy-search": "~1.1.1",
    "feathers-mongoose": "~5.1.2",
    "feathers-rest": "~1.8.1",
    "feathers-seeder": "~1.0.10",
    "feathers-socketio": "~2.0.1",
    "fs-blob-store": "~5.2.1",
    "fs-extra": "~4.0.2",
    "handlebars": "~4.0.11",
    "handlebars-layouts": "~3.1.4",
    "helmet": "~3.10.0",
    "html-excerpt": "~0.1.0",
    "mongoose": "~4.13.2",
    "multer": "~1.3.0",
    "node-sass": "~4.7.2",
    "raven": "~2.4.0",
    "request": "~2.83.0",
    "request-promise": "~4.2.2",
    "serve-favicon": "~2.4.5",
    "shortid": "~2.2.8",
    "slug": "~0.9.1",
    "winston": "~3.0.0-rc1"
  },
  "devDependencies": {
    "babel-eslint": "~8.2.1",
    "concurrently": "~3.5.1",
    "eslint": "~4.16.0",
    "mocha": "^5.0.0",
    "nodemon": "~1.14.11",
    "wait-on": "~2.1.0"
  }
}
